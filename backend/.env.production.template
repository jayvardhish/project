# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# Security
SECRET_KEY=your-secret-key-here-generate-a-secure-one
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
MONGODB_URI=your-mongodb-connection-string
DATABASE_NAME=smart_learning_platform

# Email Configuration
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_FROM=your-email@gmail.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME="Smart Learning Platform"

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-backend-url.onrender.com/api/auth/google/callback

# AI API Keys
DEEPSEEK_API_KEY=your-deepseek-or-openrouter-api-key
DEEPSEEK_API_URL=https://openrouter.ai/api/v1

# Frontend URL
CLIENT_URL=https://your-frontend-url.onrender.com
PRODUCTION_CLIENT_URL=https://your-frontend-url.onrender.com
PORT=5000
